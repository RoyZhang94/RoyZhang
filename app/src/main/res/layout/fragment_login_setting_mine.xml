<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/login_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/dark_blue_gary"
        >
        <com.bignerdranch.andriod.tot.ShapeImageView
            android:id="@+id/fragment_mine_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/head"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_below="@id/fragment_mine_login"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/shezhi"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/mine_linerlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/light_black"
        android:layout_below="@id/login_relativelayout">

        <Button
            android:id="@+id/night_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="夜间模式"
            android:drawableTop="@drawable/nightmode"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:background="@color/light_black"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/text_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="文字模式"
            android:textColor="@color/white"
            android:drawableTop="@drawable/textmode"
            android:paddingTop="5dp"
            android:background="@color/light_black"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/offline_read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="离线阅读"
            android:textColor="@color/white"
            android:background="@color/light_black"
            android:drawableTop="@drawable/download"
            android:paddingTop="5dp"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>