<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/packpage_vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_tran"
        />

    <RadioGroup
        android:id="@+id/main_navi_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_navi_home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/item_home"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="新闻"
            android:textColor="@drawable/menu_item_selecter"
            android:textSize="12dp"
            />

        <RadioButton
            android:id="@+id/main_navi_recommend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/item_recommened"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="推荐"
            android:textColor="@drawable/menu_item_selecter"
            android:textSize="12dp"

            />

        <RadioButton
            android:id="@+id/main_navi_mine"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/item_mine"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="我的"
            android:textColor="@drawable/menu_item_selecter"
            android:textSize="12dp"
            />
    </RadioGroup>
</LinearLayout>